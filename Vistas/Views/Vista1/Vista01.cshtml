    <script>
    function enviarFormulario() {
        var formData = {
            nombre: $("#nombre").val(),
            telefono: $("#telefono").val(),
            email: $("#email").val(),
            empresa: $("#empresa").val()
        };

        $.ajax({
            type: "POST",
            url: "/api/Vista1/Add",
            data: JSON.stringify(formData), // Convertir formData a JSON
            contentType: "application/json", // Establecer el tipo de contenido a application/json
            dataType: "json",
            encode: true
        })

            .done(function (data) {
                // Manejar la respuesta de la API si es necesario
                console.log(data);
                // Borrar los valores de los campos del formulario
                $("#nombre").val("");
                $("#telefono").val("");
                $("#email").val("");
                $("#empresa").val("");
            })
            .fail(function (data) {
                // Manejar errores si la solicitud falla
                console.log(data);
            });
    }

</script>

     